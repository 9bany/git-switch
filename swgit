#!/usr/bin/env bash

# required(): void
# check git has been installed.
function required() {
    git --version 2>&1 >/dev/null 
    GIT_IS_AVAILABLE=$?
    if [ $GIT_IS_AVAILABLE -eq 0 ]; 
    then
        echo "Git installed";
    else
        echo "Git have not install";
        exit;
    fi
}

